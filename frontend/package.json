{
  "name": "lexia-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "VITE_USE_MOCK_DATA=true vite",
    "dev:api": "VITE_USE_MOCK_DATA=false vite",
    "dev:test": "echo 'Iniciando con testing autom√°tico...' && npm run dev",
    "build": "vite build",
    "build:mock": "VITE_USE_MOCK_DATA=true vite build",
    "build:production": "cross-env VITE_USE_MOCK_DATA=false NODE_ENV=production vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:connection": "node -e \"console.log('Use window.runFullTest() en la consola del navegador')\"",
    "start": "npm run dev",
    "start:mock": "npm run dev:mock",
    "check-backend": "curl -f http://localhost:8000/health || echo 'Backend no disponible'",
    "fix-deps": "npm ci && npm run dev",
    "reset-deps": "rm -rf node_modules package-lock.json && npm install",
    "build:gcloud": "npm run build:production",
    "deploy:prepare": "npm run build:gcloud",
    "deploy:gcloud": "gcloud app deploy --quiet",
    "deploy:full": "npm run deploy:prepare && npm run deploy:gcloud",
    "gcloud:logs": "gcloud app logs tail -s default",
    "gcloud:browse": "gcloud app browse",
    "deploy:quick": "npm run build && npm run deploy:gcloud && gcloud app browse"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.77.2",
    "axios": "^1.3.4",
    "clsx": "^1.2.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "vite": "^4.3.2",
    "vitest": "^0.30.1"
  }
}